<div class="container">
<div class="row">


<h1> <%=@event.title%> </h1>
<br>





       


<div class="row">   
    <div class="col-md-6">
      
          <img src="/images/<%=@event.image_file%>" width = "260px" height = "240px" style="float:left;" class="hvr-float-shadow">
           </div>
           <div class="col-md-6">  <!--seperate column made to space image and text-->
          <h4 style="float:center;"> Address: <%=@event.address%> </h4>
          <br>
          <h4 style="float:center;"> Seats Left: <%=@event.capacity%> </h4>
          <br>
          <h4 style="float:center;"> Price:$<%=@event.price%> </h4>
          <br>
          <h4 style="float:center;"> Date: <%=@event.event_date%> </h4>
          <br>
          <h4 style="float:center;"> Start Time: <%=@event.start_time%> </h4>
          <form method="post" action="/events/<%=@event.id%>">
          <% if !@registration_flag.nil?  %>
            <% if @registration_flag  %>
              <button class = "btn btn-danger btn-md" type="submit" value="cancel" name="commit"> Cancel </button>
              <% elsif !@registration_flag  %>
              <button class = "btn btn-success btn-md hvr-grow-shadow" type="submit" value="book" name="commit"> Book </button>

            <% end %>
          <% end %>
        </form>
       
   </div>
</div>
<br>
<br>
<div class="row">
  <div class="col-md-6">

          <h4 style="color: #474747;" id="event_description"> <%=@event.description%> </h4>
  </div>
</div>

<!-- New stuff -->
