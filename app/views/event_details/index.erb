<% if current_user %>
<div class="row">
<div class="col-md-4">
  <form method="post" action="/events/<%=@event.id%>">
  
 
    <h3> Message Board </h3>
    <textarea type="text" name="message" class="form-control" placeholder="Feel free to post your message here"></textarea>
    <br>

  <button type="submit" class="btn btn-primary btn-md" type="submit" value="comment" name="commit"> Post Comment</button>

  </form>


<% end %>


<div>
	<% @comments.each do |comment| %>
	<div>
		<h4>
			<%= comment.message %>  <small> (by: <%= comment.user.name %>)
      </small>
		</h4>

	</div>		
	<% end %>
</div>	
</div>
</div>




